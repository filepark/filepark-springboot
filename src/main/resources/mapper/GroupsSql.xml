<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mapper.GroupsMapper">
	<resultMap id="groupResultMap" type="GroupsDTO">
		<id property="id" column="id" />
		<result property="userId" column="user_id" />
		<result property="name" column="name" />
		<result property="description" column="description" />
		<result property="maxUser" column="max_user" />
		<result property="createdAt" column="created_at" />
		<result property="updatedAt" column="updated_at" />
	</resultMap>
	<insert id="createGroup" parameterType="map">
		INSERT INTO `groups` (user_id, name, description, max_user) VALUES (#{userId}, #{name}, #{description}, #{maxUser}
	</insert>
	<select id="readGroupById" parameterType="int"
		resultMap="groupResultMap">
		SELECT * FROM `groups` WHERE id = #{id}
	</select>
</mapper>